#include <bits/stdc++.h>

using namespace std;

vector<int> nextPermutation(vector<int> &arr, int N)

{

   //  Write your code here.

   int cnt=0;

   for(int i=0;i<N-1;i++){

       if(arr[i]>arr[i+1]){

          cnt++;  

       }

   }

   if(cnt==N-1)

   {

       sort(arr.begin(),arr.end());

       return arr;

   }

      int i;

      for( i=N-1;i>0;i--){

          if(arr[i]>arr[i-1]){

              i--;

              break;

          }

      }

     

      int k=i+1;

      int j=N-1;

      for(j;j>0;j--)

      {

          if(arr[i]<arr[j])

          {

              break;

          }

      }

     

      swap(arr[i],arr[j]);

       

   vector<int>::iterator ip;

   ip=arr.begin();

   ip=ip+k;

   reverse(ip, arr.end());    

   //sort(ip,arr.end());

       

      return arr;

       

   }
